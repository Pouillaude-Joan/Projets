{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ question.title }}</td>
            </tr>
            <tr>
                <th>QuestionContent</th>
                <td>{{ question.questionContent }}</td>
            </tr>
            <tr>
                <th>QuestionDate</th>
                <td>{{ question.questionDate ? question.questionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Resolved</th>
                <td>{{ question.resolved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
